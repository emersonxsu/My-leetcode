class Solution {
public:
    string convertToTitle(int n) {
        string res;
        int r; //remainder
        while (n > 0) {
            r = (n - 1) % 26;
            char c = r + 'A';
            res = c + res;
            n = (n - 1) / 26;
        }
        return res;
        
    }
};

/*
the key point is (n-1), the rest is just like decimal to binary. 
